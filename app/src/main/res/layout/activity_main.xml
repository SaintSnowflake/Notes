<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/container">
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/headerSize" />
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/headerSize"
            android:background="@color/colorPrimary"
            android:text="Задачи на сегодня"
            android:textSize="@dimen/head_text_size"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/paddingLeft"
            android:textColor="@color/colorHeader"
            android:layout_alignParentTop="true"/>
        <Button
            android:layout_width="@dimen/add_button_size"
            android:layout_height="@dimen/add_button_size"
            android:id="@+id/add_note_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/add_icon_dark"
            android:layout_margin="20dp"/>
    </RelativeLayout>
</FrameLayout>
